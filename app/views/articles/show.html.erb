<% title "Article" %>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Written On:</strong>
  <%= @article.written_on %>
</p>
<p>
  <strong>Article Content:</strong>
  <%= @article.article_content %>
</p>

<p>
  <%= link_to "Edit", edit_article_path(@article) %> |
